{
    "name": "AI2D_UNet_wn",
    "cuda": true,
    "gpu": 0,
    "data_loader": {
        "data_set_name": "AI2D",
        "data_dir": "/home/ubuntu/brian/data/ai2d",
        "batch_size": 16,
        "shuffle": true,
        "patch_size": 300,
        "center_jitter": 0.1,
        "size_jitter": 0.2
    },
    "validation": {
        "validation_split": 0.01,
        "shuffle": true
    },

    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_step": 100000,
    "lr_scheduler": {
            "gamma": 0.8685113737513527
    },
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": "sigmoid_BCE_loss",
    "metrics": ["meanIOU"],
    "trainer": {
        "iterations": 1000000,
        "save_dir": "saved/",
        "val_step": 10000,
        "save_step": 30000,
        "log_step": 1000,
        "verbosity": 2,
        "monitor": "val_meanIOU",
        "monitor_mode": "none"
    },
    "arch": "UNet", 
    "model": {
        "skip_last_sigmoid": true,
        "n_channels": 4,
        "norm_type": "weightNorm"
    }
}
