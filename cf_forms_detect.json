{
    "name": "Forms_detect",
    "cuda": true,
    "gpu": 0,
    "override": true,
    "data_loader": {
        "data_set_name": "FormsDetect",
        "data_dir": "/home/ubuntu/brian/data/forms",
        "batch_size": 16,
        "shuffle": true,
        "num_workers": 5,
        "crop_to_page":false,
        "crop_params": {
            "crop_size":512
        },
        "rescale_range": [450,800],
        "no_blanks": true,
        "cache_resized_images": true

    },
    "validation": {
        "shuffle": false,
        "crop_to_page":false,
        "rescale_range": [512,512]
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0
    },
    "loss": "detect_alignment_loss",
    "loss_params": {
        "alpha_alignment": 0.1,
        "alpha_backprop": 0.1
    },
    "metrics": [],
    "trainer": {
        "class": "DetectTrainer",
        "iterations": 1000000,
        "save_dir": "saved/",
        "val_step": 2000,
        "save_step": 4000,
        "log_step": 200,
        "verbosity": 2,
        "monitor": "loss",
        "monitor_mode": "none"
    },
    "arch": "SOL_EOL_Finder", 
    "model": {
        "number_of_object_types": 4,
        "norm_type": "weightNorm"
    }
}
