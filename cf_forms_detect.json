{
    "name": "Forms_detect",
    "cuda": true,
    "gpu": 0,
    "override": true,
    "data_loader": {
        "data_set_name": "AI2D",
        "data_dir": "/home/ubuntu/brian/data/ai2d",
        "batch_size": 16,
        "shuffle": true,
        "num_workers": 2,
        "crop_to_page":false,
        "crop_params": {
            "prob_label": 0.75
            "crop_size":256
        },
        "rescale_range": [384, 640]

    },
    "validation": {
        "shuffle": false,
        "crop_to_page":false,
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": "sigmoid_BCE_loss",
    "metrics": ["meanIOU"],
    "trainer": {
        "iterations": 1000000,
        "save_dir": "saved/",
        "val_step": 5000,
        "save_step": 10000,
        "log_step": 500,
        "verbosity": 2,
        "monitor": "val_meanIOU",
        "monitor_mode": "none"
    },
    "arch": "UNet", 
    "model": {
        "skip_last_sigmoid": true,
        "n_channels": 4,
        "norm_type": "weightNorm"
    }
}
