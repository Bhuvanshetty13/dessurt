{
    "name": "FUNSDLines_pair_graphAtt2P2_smallContext_prop_read",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "super_computer":false,
    "data_loader": {
        "data_set_name": "FUNSDGraphPair",
        "data_dir": "../data/FUNSD",
        "batch_size": 1,
        "shuffle": true,
        "num_workers": 0,
        "split_to_lines": true,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.8,1.2],
        "crop_params": {
            "crop_size":[800,800],
	    "pad":50
        }


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": {
        "box": "YoloLoss",
        "rel": "sigmoid_BCE_loss",
        "propRel": "sigmoid_BCE_loss",
        "nnFinal": "MSE",
        "classFinal": "sigmoid_BCE_loss",
        "confFinal": "sigmoid_BCE_loss"
    },
    "loss_weights": {
        "box": 1.0,
        "rel": 0.5,
        "propRel": 0.5,
        "nnFinal": 0.25,
        "classFinal": 0.5,
        "confFinal": 0.5
    },
    "loss_params": 
        {
            "box": {"ignore_thresh": 0.5,
                    "bad_conf_weight": 20.0,
                    "multiclass":true}
        },
    "metrics": [],
    "trainer": {
        "class": "GraphPairTrainer",
        "iterations": 425000,
        "save_dir": "saved/",
        "val_step": 5000,
        "save_step": 25000,
        "save_step_minor": 250,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "warmup_steps": 1000,
        "conf_thresh_init": 0.5,
        "conf_thresh_change_iters": 0,
        "retry_count":1,

        "mergeAndGroup": true,

        "unfreeze_detector": 2000,
        "partial_from_gt": 0,
        "stop_from_gt": 20000,
        "max_use_pred": 0.5,
        "use_all_bb_pred_for_rel_loss": true,

        "freeze_param_names": ["text_rec"],

        "use_learning_schedule": true,
        "adapt_lr": false
    },
    "arch": "PairingGroupingGraph", 
    "model": {
        "detector_checkpoint": "saved/FUNSDLines_detect_augRFh_staggerLighter_NN/checkpoint-latest.pth",
        "conf_thresh": 0.5,
        "start_frozen": true,
        "relationship_proposal": "feature_nn",
        "percent_rel_to_keep": 0.4,
        "max_rel_to_keep": 300,

	"use_rel_shape_feats": "corner",
        "use_detect_layer_feats": 16,
        "use_2nd_detect_layer_feats": 0,
        "use_2nd_detect_scale_feats": 2,
        "use_2nd_detect_feats_size": 64,
        "use_fixed_masks": true,
        "no_grad_feats": true,

        "expand_rel_context": 20,
        "featurizer_start_h": 32,
        "featurizer_start_w": 32,
        "featurizer_conv": ["sep128","M","sep128","sep128","M","sep256","sep256","M",238],
        "featurizer_fc": null,

        "pred_nn": false,
        "pred_class": true,
        "expand_bb_context": 20,
        "featurizer_bb_start_h": 32,
        "featurizer_bb_start_w": 32,
        "bb_featurizer_conv": ["sep64","M","sep64","sep64","M","sep128","sep128","M",250],

        "fix_bi_dir": true,
        "graph_config": [{
            "arch": "MetaGraphNet",
            "in_channels": 384,
            "node_out": 5,
            "edge_out": 4,
            "num_layers": 2,
            "num_heads": 4,
            "repetitions": 1,
            "use_repetition_res": false,
            "encode_type": "attention",
	    "merge_thresh": 0.7,
            "group_thresh": 0.9,
            "keep_edge_thresh": 0.4
        },
        {
            "arch": "MetaGraphNet",
            "in_channels": 384,
            "node_out": 5,
            "edge_out": 4,
            "num_layers": 2,
            "num_heads": 4,
            "repetitions": 1,
            "use_repetition_res": false,
            "encode_type": "attention",
	    "merge_thresh": 0.6,
            "group_thresh": 0.6,
            "keep_edge_thresh": 0.5
        }],

        "text_rec": {
            "model": "SmallCRNN",
            "num_char": 131,
            "norm": "batch",
            "use_softmax": true,
            "batch_size": 8,
            "pad_text_height": true,
            "hw_with_style_file": "saved/allfontSmall_ocr_softmax_aug/checkpoint-latest.pth",
            "input_height": 24,
            "char_set": "../data/english_char_set.json",
            "embedding": "word2vec shallow",
            "num_feats": 128
        }

    }
}
