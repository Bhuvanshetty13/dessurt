{
    "name": "nobrain_qa1_gpt2",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "NobrainQA",
        "data_dir": "../data/FUNSD",
        "batch_size": 30,
        "num_workers": 0,
        "rescale_range": [1.0,1.0],
        "crop_params": null,
	"questions": 1,
        "shuffle": false,
        "#textfile":"../hw_with_style/data/lotr.txt"


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.00001,
        "weight_decay": 0.01
    },
    "loss": {
	"xanswer": "padded_seq_cross_entropy",
	"answer": "label_smoothing"
    },
    "loss_weights": {
        "answer": 1
    },
    "loss_params": 
        {
            "xanswer": {},
	    "answer": {"smoothing":0.1}
        },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 300000,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 50000,
        "save_step": 25000,
        "save_step_minor": 200,
        "log_step": 100,
        "print_pred_every": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count":2,


        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000],
	"#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01

    },
    "arch": "QAImDocGPT2", 
    "model": {
            "blank_ocr": 0.2,
            "char_output": true,
            "char_tokens": true,
            "image_size": 192,
            "no_dropout": false,
            "window_size": 12,
            "decode_dim": 256,
            "dim_ff": 512,
            "decode_num_heads": 8,
            "no_dropout": false,
            "swin_blocks_per_level": [2,2],
            "swin_text_downsample": [true],
            "swin_nheads": [4,8],
            "im_embed_dim": 16,
            "pre_trained": {
                "patch_emb": "saved/synth_ocr_crnnskipforswin_new/checkpoint-iteration400000.pth"
            },
            "full_layers": null
    }
}
