{
    "name": "paraqaSmaller_donut_42",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "SynthParaQA",
	"mode": "pretrain_nomask",
        "data_dir": "../data/fonts",
        "batch_size": 7,
        "num_workers": 4,
        "rescale_range": [0.9,1.1],
        "crop_params": {
                "crop_size":[96,384],
                "pad":0,
                "rot_degree_std_dev": 1
            },
	"questions": 1,
	"max_qa_len_in": 640,
	"max_qa_len_out": 2560,
        "image_size": [94,380],
	"prefetch_factor": 2,
        "shuffle": true


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
	"xanswer": "padded_seq_cross_entropy",
	"answer": "label_smoothing",
        "mask": "focalLoss"
    },
    "loss_weights": {
        "answer": 1,
        "mask": 1
    },
    "loss_params": 
        {
            "xanswer": {},
	    "answer": {"smoothing":0.1}
        },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 400000,
        "accum_grad_steps": 6,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 999999999999999,
        "save_step": 100000,
        "save_step_minor": 200,
        "log_step": 100,
        "print_pred_every": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count":0,

	"do_ocr": "no",


        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000],
	"#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01

    },
    "arch": "Donut",
    "model": {

            "in_token_type": "word",
            "out_token_type": "word",
            "image_size": [96,384],

	    "use_res_cnn_embed": true,
            "pre_trained": {
                "patch_emb": "saved/synth_ocr_emb_pretrain_slow/checkpoint-latest.pth"
            },
            "swin_blocks_per_level": [4,2],
            "im_embed_dim": 128,
            "swin_nheads": [ 4, 8],
            "window_size": 6,

            "bart_layers": 12,
            "decoder_dim": 512

    }
}
