{
    "name": "synthqa_perceiverAutoR_3c_ocr_fonts_small",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "SynthQADocDataset",
	"pretrain": true,
        "fontdir": "../data/fonts",
        "textdir": "../data/",
        "data_dir": "../data/english4line_fonts",
        "include_ocr": false,
        "batch_size": 3,
        "num_workers": 4,
        "rescale_range": [1.0,1.0],
        "crop_params": {
                "crop_size":[192,384],
                "pad":0,
                "rot_degree_std_dev": 1
            },
	"questions": 1,
	"max_qa_len": 2044,
        "min_entries": null,
        "max_entries": 2,
	"use_read": 0.01,
	"multiline": 0.000001,
        "change_size": true,
	"word_questions": "simple",
	"do_masks": true,
        "text_height": 32,
        "image_size": [192,384],
        "max_chars": 10,
        "min_chars": 1,
        "use_before_refresh": 99999999999999999999,
        "set_size": 500000,
        "num_processes": -1,
        "gen_type": "veryclean",
        "char_file": "../data/english_char_set.json",
        "shuffle": true


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
	"xanswer": "padded_seq_cross_entropy",
	"answer": "label_smoothing"
    },
    "loss_weights": {
        "answer": 1
    },
    "loss_params": 
        {
            "xanswer": {},
	    "answer": {"smoothing":0.1}
        },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 500000,
        "accum_grad_steps": 20,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 999999999999999,
        "save_step": 50000,
        "save_step_minor": 200,
        "log_step": 100,
        "print_pred_every": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count":0,

	"do_ocr": "yes",


        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000],
	"#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01

    },
    "arch": "QAImDocPerceiver", 
    "model": {
	    "grid_ocr": false,
	    "ocr_tokens": true,
	    "autoregressive": true,
	    "char_output": true,
	    "char_tokens": true,
            "image_size": [192,384],
            "pre_trained": {
                "patch_emb": "saved/synth_ocr_crnnskipforswin_new/checkpoint-iteration400000.pth"
            },
	    "input_dim": 256,
	    "perceiver_blocks": [[6,1],[6,1],[7,2]],
	    "num_latents": 256,
	    "latent_dim": 800,
	    "cross_heads": 8,
	    "self_heads": 8,
	    "output_dim": 256,
	    "out_length": 2048
	    
    }
}
