{
    "name": "census_3swin_censusSize_PTJustMore_nrm1.7M",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "CensusQA",
        "data_dir": "../data/familysearch",
        "shuffle": true,
        "prefetch_factor": 10,
        "persistent_workers": true,
        "batch_size": 1,
        "num_workers": 4,
        "rescale_range": [1,1.15],
        "rescale_to_crop_size_first": true,
        "crop_params": {
            "crop_size":[1056,1408],
            "pad":0,
            "rot_degree_std_dev": 1
            },
        "questions":1,
        "max_qa_len": 26
    },
    "validation": {
        "batch_size":4,
        "shuffle": false,
        "rescale_range": [1.05,1.05],
        "rescale_to_crop_size_first": true,
        "crop_params": {
            "crop_size":[1056,1408],
            "pad":0,
            "random": false
            }
    },
    "lr_scheduler_type": "none",
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
        "#answer": "padded_seq_cross_entropy",
        "answer": "label_smoothing",
	"#mask": "sigmoid_BCE_mask_loss",
	"mask": "focalLoss"
    },
    "loss_weights": {
        "answer": 1,
	"mask": 1
    },
    "loss_params": {
        "xanswer": {},
        "answer": {
            "smoothing": 0.1
        }
    },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 10000000,
        "accum_grad_steps": 60,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 50000,
        "save_step": 500000,
        "save_step_minor": 200,
        "log_step": 1000,
        "print_pred_every": 1000,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count": 0,
        "do_ocr": "no",
        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [
            1000
        ],
        "#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01
    },
    "arch": "QAImDocGPT3",
    "model": {
        "blank_ocr": 0.2,
        "char_output": true,
        "char_tokens": true,
        "image_size": [
		1056,1408
        ],
        "no_dropout": false,
        "window_size": 11,
        "decode_dim": 256,
        "dim_ff": 512,
        "decode_num_heads": 8,
        "swin_blocks_per_level": [
            4,
            4
        ],
        "swin_text_downsample_all": [
            false,
            true,
            false,
            true,
            false,
            true,
            false,
            false
        ],
        "swin_nheads": [
            4,
            8
        ],
        "im_embed_dim": 128,
        "full_layers": null
    }
}
