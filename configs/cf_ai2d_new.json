{
    "name": "ai2d_new",
    "cuda": true,
    "gpu": 0,
    "super_computer":true,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "AI2DBoxDetect",
        "data_dir": "../data/ai2d",
        "batch_size": 32,
        "shuffle": true,
        "num_workers": 5,
        "color":true,
        "rescale_range": [0.85,0.15],
        "crop_params": {
            "crop_size":[320,320],
            "pad":0
        },
        "only_types": {
            "boxes":true
        },
        "rotation": false


    },
    "validation": {
        "shuffle": false,
        "color":true,
        "rescale_range": [0.52,0.52],
        "only_types": {
            "boxes":true
        },
        "batch_size": 1,
        "rotation": false
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.01,
        "weight_decay": 0
    },
    "loss": {
        "box":"YoloLoss"
    },
    "loss_params": {
        "box": {
            "ignore_thresh": 0.5,
            "bad_conf_weight": 20.0
        }
    },
    "loss_weights":{"box":1.0},
    "metrics": [],
    "trainer": {
        "class": "BoxDetectTrainer",
        "iterations": 350000,
        "save_dir": "saved/",
        "val_step": 5000,
        "save_step": 25000,
        "save_step_minor": 250,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "warmup_steps": 1000,
        "thresh_conf":0.88,
        "thresh_intersect":0.4
    },
    "arch": "YoloBoxDetector", 
    "model": {
        "color":true,
        "number_of_box_types": 4,
        "number_of_point_types": 0,
        "number_of_pixel_types": 0,
        "norm_type": "group_norm",
        "dropout": true,
        "down_layers_cfg": [3,"k5-32", 32, "M", 
                                64, 64,  "M", 
                                128, "d2-128", 128,  "M", 
                                256, "d4-256", 256,  "M", 
                                512, "d8-512",512, 512],
        "up_layers_cfg":[],
        "anchors_file": "anchors_ai2d_25.json",
        "rotation":false
    }
}
