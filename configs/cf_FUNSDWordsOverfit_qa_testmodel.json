{
    "name": "FUNSDWordsOverfit_qa_testmodel",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "FUNSDGraphPair",
        "overfit": true,
        "data_dir": "../data/FUNSD",
        "batch_size": 1,
        "shuffle": true,
        "num_workers": 4,
        "split_to_lines": true,
        "crop_to_page":false,
        "color":true,
        "rescale_range": [0.8,1.2],
        "crop_params": {
            "crop_size":[800,800],
	    "pad":50
        },
	"questions": 20


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.01,
        "weight_decay": 0.01
    },
    "loss": {
	"answer": "label_smoothing"
    },
    "loss_weights": {
        "answer": 1
    },
    "loss_params": 
        {
	    "answer": {"smoothing":0.1}
        },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 300000,
	"accum_grad_steps": 5,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 50000,
        "save_step": 25000,
        "save_step_minor": 200,
        "log_step": 50,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "conf_thresh_init": 0.5,
        "conf_thresh_change_iters": 0,
        "retry_count":2,


        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000],
	"#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01,

	"word_bbs": true
    },
    "arch": "DecoderOnPairing", 
    "model": {
	    "decode_dim": 512,
	    "dim_ff": 2048,
	    "decode_num_heads": 8,
	    "decode_layers": 3,
	    "encode_layers": 3
    }
}
