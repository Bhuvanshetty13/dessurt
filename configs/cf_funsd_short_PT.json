{
    "name": "funsd_short_PT",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "FUNSDQA",
        "data_dir": "../data/FUNSD",
        "batch_size": 1,
        "num_workers": 4,
        "rescale_range": [0.8,1.2],
        "crop_params": {
            "crop_size":[1024,1024],
            "pad":0,
            "rot_degree_std_dev": 1.5
        },
        "questions": 2,
        "char_qs": true,
        "split_to_lines": true,
        "do_words": false,
        "color": false,
        "shuffle": true


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": {
            "crop_size":[1024,1024],
            "pad":0
        },
        "batch_size": 1,
        "questions": 4
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
	"xanswer": "padded_seq_cross_entropy",
	"answer": "label_smoothing"
    },
    "loss_weights": {
        "answer": 1
    },
    "loss_params": 
        {
            "xanswer": {},
	    "answer": {"smoothing":0.1}
        },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 600000,
        "accum_grad_steps": 15,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 10000,
        "save_step": 25000,
        "save_step_minor": 200,
        "log_step": 100,
        "print_pred_every": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count":0,


        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000],
	"#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01

    },
    "arch": "QAImDocGPT", 
    "model": {
            "blank_ocr": true,
            "image_size": 1024,
            "window_size": 8,
	    "decode_dim": 128,
	    "dim_ff": 256,
	    "decode_num_heads": 4,
	    "no_dropout": true,
            "blocks_per_level": [2,2,2],
            "swin_nheads": [2,4,8],
            "im_embed_dim": 64
    }
}
