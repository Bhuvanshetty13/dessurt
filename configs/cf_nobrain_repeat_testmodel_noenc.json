{
    "name": "nobrain_repeat_testmodel",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "NobrainGraphPair",
        "data_dir": "../data/FUNSD",
        "batch_size": 1,
        "num_workers": 0,
        "rescale_range": [1.0,1.0],
        "crop_params": null,
	"questions": 98,
        "shuffle": false,
        "textfile":"../hw_with_style/data/lotr.txt",
	"repeat_after_me": true


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.01,
        "weight_decay": 0.01
    },
    "loss": {
	"xanswer": "padded_seq_cross_entropy",
	"answer": "label_smoothing"
    },
    "loss_weights": {
        "answer": 1
    },
    "loss_params": 
        {
            "xanswer": {},
	    "answer": {"smoothing":0.1}
        },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 300000,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 50000,
        "save_step": 25000,
        "save_step_minor": 200,
        "log_step": 25,
        "print_pred_every": 50,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count":2,


        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000],
	"#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01,

	"word_bbs": true
    },
    "arch": "DecoderOnPairing", 
    "model": {
	    "decode_dim": 256,
	    "dim_ff": 512,
	    "decode_num_heads": 1,
	    "decode_layers": 2,
	    "encode_layers": 0
    }
}
