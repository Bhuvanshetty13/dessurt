{
    "name": "test",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "MultipleDataset",
        "data_dir": "",
        "shuffle": true,
        "prefetch_factor": 5,
        "persistent_workers": true,
        "batch_size": 1,
        "num_workers": 4,
        "datasets": [
            {
                "freq": 0.8,
                "config": {
                    "data_set_name": "SynthParaQA",
                    "data_dir": "../data/fonts",
		    "mode": "blind",
                    "batch_size": 1,
                    "num_workers": 4,
                    "rescale_range": [
                        0.9,
                        1.1
                    ],
                    "crop_params": {
                        "crop_size": [
                            768,768
                        ],
                        "pad": 0,
                        "rot_degree_std_dev": 1
                    },
                    "questions": 1,
                    "max_qa_len_in": 60,
                    "max_qa_len_out": 506,
                    "image_size": [
                        760,760
                    ],
                    "prefetch_factor": 10,
                    "persistent_workers": true
                }
            }
        ]


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
	"xanswer": "padded_seq_cross_entropy",
	"answer": "label_smoothing",
        "mask": "focalLoss"
    },
    "loss_weights": {
        "answer": 1,
        "mask": 1
    },
    "loss_params": 
        {
            "xanswer": {},
	    "answer": {"smoothing":0.1}
        },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 400000,
        "accum_grad_steps": 0,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 999999999999999,
        "save_step": 100000,
        "save_step_minor": 200,
        "log_step": 100,
        "print_pred_every": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count":0,

	"do_ocr": "no",


        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000],
	"#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01

    },
    "arch": "QAImDocPerceiver", 
    "model": {
	    "grid_ocr": false,
	    "ocr_tokens": false,
	    "autoregressive": true,
	    "char_output": true,
	    "char_tokens": true,
            "image_size": [768,768],
            "pre_trained": {
                "patch_emb": "saved/synth_ocr_crnnskipforswin_new/checkpoint-iteration400000.pth"
            },
	    "input_dim": 256,
	    "perceiver_blocks": [[3,1,true],[3,1,true],[3,1,true],[3,1,true],[3,1,true],[3,1,true],[3,1,true]],
	    "num_latents": 256,
	    "latent_dim": 800,
	    "cross_heads": 8,
	    "self_heads": 8,
	    "output_dim": 256,
	    "out_length": 512
	    
    }
}
