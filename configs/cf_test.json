{
    "name": "test",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "SynthParaQA",
	"mode": "pretrain_word",
        "cased": true,
        "data_dir": "../data/fonts",
        "batch_size": 4,
        "num_workers": 4,
        "rescale_range": [0.9,1.1],
        "crop_params": {
                "crop_size":[112,448],
                "pad":0,
                "rot_degree_std_dev": 1
            },
	"questions": 1,
        "max_qa_len_in": 640,
        "max_qa_len_out": 2560,
        "image_size": [112,448],
	"prefetch_factor": 2,
        "shuffle": true
    },
    "validation": {
        "shuffle": false
    },
    "lr_scheduler_type": "none",
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
        "#answer": "padded_seq_cross_entropy",
        "answer": "label_smoothing",
	"#mask": "sigmoid_BCE_mask_loss",
	"mask": "focalLoss"
    },
    "loss_weights": {
        "answer": 1,
	"mask": 1
    },
    "loss_params": {
        "xanswer": {},
        "answer": {
            "smoothing": 0.1,
            "padding_idx": 1
        }
    },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 4000000,
        "accum_grad_steps": 1,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 999999999999999,
        "save_step": 200000,
        "save_step_minor": 200,
        "log_step": 100,
        "print_pred_every": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count": 0,

        "do_ocr": "no",

        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [
            1000
        ],
        "#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01
    },
    "arch": "MmSwin",
    "model": {
        "image_size": [
            112,448
        ],
	"#max_q_tokens": 16,
	"#max_a_tokens": 256,
        "use_set_length:": true,
        "init_from_pretrained": "bart",
        "use_special_question_tokens": true,
        "no_dropout": false,
        "window_size": 7,
        "decode_dim": 768,
        "dim_ff": 3000,
        "decode_num_heads": 8,
        "blocks_per_level": [
            4,
            4
        ],
        "use_swin":[
            true,
            true,
            true,
            true,
	    true,
	    true,
            false,
            false
        ],
        "swin_cross_attention":[
            true,
            true,
            true,
            true,
            true,
            true,
            false,
            false
        ],
        "swin_nheads": [
            4,
            8
        ],
        "im_embed_dim": 224,
        "full_layers": null
    }
}
