{
    "name": "test",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "MultipleDataset",
        "data_dir": "",
        "shuffle": true,
        "prefetch_factor": 5,
        "persistent_workers": true,
        "batch_size": 1,
        "num_workers": 2,
        "datasets": [
            {
                "freq": 0.2,
                "config": {
                    "data_set_name": "DistilBartDataset",
                    "data_dir": "../data/fonts",
                    "image_size": [1152,768],
                    "max_auto_tokens": 512,
                    "no_distill": true
                }
            }
        ]
    },
    "validation": {
        "shuffle": false
    },
    "lr_scheduler_type": "none",
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
        "answer": "label_smoothing"
    },
    "loss_weights": {
        "answer": 1,
        "cosine": 0,
        "distillation": 2.5
    },
    "loss_params": {
        "xanswer": {},
        "answer": {
            "smoothing": 0.1,
            "padding_idx": 1
        }
    },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 4000000,
        "accum_grad_steps": 1,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 999999999999999,
        "save_step": 200000,
        "save_step_minor": 256,
        "log_step": 1024,
        "print_pred_every": 1024,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count": 0,

        "do_ocr": "no",

        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [
            1000
        ],
        "#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01
    },
    "arch": "MmSwin",
    "model": {
        "image_size": [
            1152,768
        ],
        "use_set_length": true,
        "init_from_pretrained": "bart",
        "use_special_question_tokens": true,
        "no_dropout": false,
        "max_q_tokens": 20,
        "max_a_tokens": 800,
        "window_size": 12,
        "decode_dim": 768,
        "dim_ff": 3072,
        "decode_num_heads": 8,
        "blocks_per_level": [
            4,
            8
        ],
        "use_swin":[
            true,
            true,
            true,
            true,
            true,
            true,
            true,
            true,
            false,
            false,
            false,
            false
        ],
        "swin_cross_attention":[
            false,
            false,
            false,
            false,
            false,
            false,
            false,
            false,
            false,
            false,
            false,
            false
        ],
        "swin_nheads": [
            4,
            8
        ],
        "im_embed_dim": 128
    }
}
