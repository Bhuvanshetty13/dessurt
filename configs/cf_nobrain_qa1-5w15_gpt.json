{
    "name": "nobrain_qa1-5w15_gpt",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "NobrainQA",
        "data_dir": "../data/FUNSD",
        "batch_size": 300,
        "num_workers": 2,
        "rescale_range": [1.0,1.0],
        "crop_params": null,
	"questions": 1,
	"additional_doc_len": 4,
        "shuffle": false,
	"shuffle_doc": "pairs",
        "textfile":"fifteenwords.txt"


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.00001,
        "weight_decay": 0.01
    },
    "loss": {
	"xanswer": "padded_seq_cross_entropy",
	"answer": "label_smoothing"
    },
    "loss_weights": {
        "answer": 1
    },
    "loss_params": 
        {
            "xanswer": {},
	    "answer": {"smoothing":0.1}
        },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 300000,
        "#swa": true,
        "#swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 50000,
        "save_step": 25000,
        "save_step_minor": 200,
        "log_step": 100,
        "print_pred_every": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "retry_count":0,


        "#use_learning_schedule": "multi_rise then ramp_to_swa",
        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000],
	"#ramp_down_steps": 10000,
        "#swa_lr_mul": 0.01

    },
    "arch": "QAGPT", 
    "model": {
	    "decode_dim": 128,
	    "dim_ff": 256,
	    "decode_num_heads": 4,
	    "decode_layers": 4,
	    "no_dropout": true
    }
}
