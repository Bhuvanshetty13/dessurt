{
    "name": "FUNSDWords_pair_layoutlm_graph663rv_new",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "FUNSDGraphPair",
        "data_dir": "../data/FUNSD",
        "batch_size": 1,
        "shuffle": true,
        "num_workers": 4,
        "split_to_lines": true,
        "crop_to_page":false,
        "color":true,
        "rescale_range": [0.8,1.2],
        "crop_params": {
            "crop_size":[800,800],
	    "pad":50
        }


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0.01
    },
    "loss": {
        "rel": "sigmoid_BCE_loss",
        "propRel": "sigmoid_BCE_loss",
        "classFinal": "sigmoid_BCE_loss",
        "confFinal": "sigmoid_BCE_loss",
	"init_classLoss": "sigmoid_BCE_loss"
    },
    "loss_weights": {
        "rel": 1,
        "propRel": 1,
        "classFinal": 1,
        "confFinal": 1,
	"init_classLoss": 1
    },
    "loss_params": 
        {
        },
    "metrics": [],
    "trainer": {
        "class": "GraphPairTrainer",
        "iterations": 300000,
        "swa": true,
        "swa_start": 200000,
        "save_dir": "saved/",
        "val_step": 100000,
        "save_step": 50000,
        "save_step_minor": 200,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "conf_thresh_init": 0.5,
        "conf_thresh_change_iters": 0,
        "retry_count":2,

        "mergeAndGroup": true,

        "unfreeze_detector": 1000,
        "partial_from_gt": null,
        "stop_from_gt": null,
        "use_word_bbs_gt": 1,
	"use_gt_trans": true,
        "valid_with_gt": true,
        "use_all_bb_pred_for_rel_loss": true,

        "use_learning_schedule": "multi_rise then ramp_to_swa",
"ramp_down_steps": 10000,
        "warmup_steps": [1000],
        "swa_lr_mul": 0.01,
        "adapt_lr": false
    },
    "arch": "PairingGGraphLayoutLM", 
    "model": {
        "detector_checkpoint": "saved/FUNSDLines_detect_augR_staggerLighter/checkpoint-iteration250000.pth",
        "detect_conf_thresh": 0.5,
        "start_frozen": true,
        "relationship_proposal": "feature_nn",
	"prop_with_text_emb": true,
	"prop_num_hidden": 128,
        "percent_rel_to_keep": 0.5,
        "max_rel_to_keep": 400,
        "roi_batch_size": 200,

	"publaynet_model": "saved/publaynet_model_196000.pth",
	"use_2_feat_levels": true,
	"num_classes": 4,


        "expand_rel_context": 20,
        "featurizer_start_h": 12,
        "featurizer_start_w": 12,
        "featurizer_conv": ["k1-512","sep512","sep256","M","sep256","sep256","M"],
        "featurizer_conv_auto": true,
        "featurizer_fc": null,

        "pred_nn": false,
        "pred_class": true,
        "expand_bb_context": 20,
        "featurizer_bb_start_h": 6,
        "featurizer_bb_start_w": 6,
        "bb_featurizer_conv": ["k1-512","sep128","sep128","M","sep128"],

        "fix_bi_dir": true,
        "reintroduce_visual_features": "fixed map",
        "graph_config": [
	    {
            "arch": "MetaGraphNet",
            "in_channels": 512,
            "node_out": 5,
            "edge_out": 5,
            "num_layers": 6,
            "num_heads": 4,
            "repetitions": 1,
            "use_repetition_res": false,
            "encode_type": "attention",
            "better_norm_attention": true,
            "node_att_thinker": "cat",
            "att_mod": "fixed",
            "merge_thresh": 0.8,
            "group_thresh": 0.95,
            "keep_edge_thresh": 0.1
        },
        {
            "arch": "MetaGraphNet",
            "in_channels": 512,
            "node_out": 5,
            "edge_out": 5,
            "num_layers": 6,
            "num_heads": 4,
            "repetitions": 1,
            "use_repetition_res": false,
            "encode_type": "attention",
            "better_norm_attention": true,
            "node_att_thinker": "cat",
            "att_mod": "fixed",
            "merge_thresh": 0.9,
            "group_thresh": 0.9,
            "keep_edge_thresh": 0.1
        },
        {
            "arch": "MetaGraphNet",
            "in_channels": 512,
            "node_out": 5,
            "edge_out": 5,
            "num_layers": 3,
            "num_heads": 4,
            "repetitions": 1,
            "use_repetition_res": false,
            "encode_type": "attention",
            "better_norm_attention": true,
            "node_att_thinker": "cat",
