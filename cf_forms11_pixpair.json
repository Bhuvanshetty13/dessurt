{
    "name": "Forms11_PixPair",
    "cuda": true,
    "gpu": 1,
    "override": true,
    "data_loader": {
        "data_set_name": "FormsPair",
        "data_dir": "/home/ubuntu/brian/data/forms",
        "batch_size": 2,
        "shuffle": true,
        "num_workers": 2,
        "patch_size": 1024,
        "use_bb_crop": true,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.65],
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "rotation": false,
        "use_dist_mask": true,
        "use_hdist_mask": true,
        "use_vdist_mask": true
    },
    "validation": {
        "batch_size": 1,
        "shuffle": false,
        "patch_size": 1024,
        "use_bb_crop": true,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.65],
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "rotation": false,
        "use_dist_mask": true,
        "use_hdist_mask": true,
        "use_vdist_mask": true
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": "sigmoid_BCE_loss",
    "metrics": ["meanIOU"],
    "trainer": {
        "class": "PixWithFeatsTrainer",
        "iterations": 2000000,
        "save_dir": "saved/",
        "val_step": 2500,
        "save_step": 5000,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "val_meanIOU",
        "monitor_mode": "none",
        "detector_checkpoint": "saved/forms11_iouVGG_dil5/checkpoint-iteration200000.pth.tar.sav"
    },
    "arch": "UNetWithDetections", 
    "model": {
        "skip_last_sigmoid": true,
        "n_channels": 4,
        "norm_type": "groupNorm",
        "up_sample_ch": 128
    }
}
