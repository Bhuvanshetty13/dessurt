{
    "name": "NAF_detect_augR_blank_oversegMultScl",
    "cuda": true,
    "gpu": 0,
    "super_computer":true,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "FormsBoxDetect",
        "data_dir": "../data/forms",
        "batch_size": 5,
        "shuffle": true,
        "num_workers": 3,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.65],
        "crop_params": {
            "crop_size":[700,1100],
            "pad":0,
            "rot_degree_std_dev": 1.2,
            "rot_freq": 0.7
        },
        "no_blanks": false,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "only_types": {
            "boxes":true
        },
        "rotation": true


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [0.52,0.52],
        "batch_size": 1,
        "crop_params": null
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.02,
        "weight_decay": 0
    },
    "loss": {
        "overseg": "MultiScaleOversegmentLoss"
    },
    "loss_params": {
        "overseg": {
            "bad_conf_weight": 20.0,
            "tile_assign_mode": "split",
            "multiclass": true
        }
    },
    "loss_weights":{"overseg":1.0},
    "metrics": [],
    "trainer": {
        "class": "BoxDetectTrainer",
        "iterations": 200000,
        "save_dir": "saved/",
        "val_step": 10000,
        "save_step": 50000,
        "save_step_minor": 500,
        "log_step": 500,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "warmup_steps": 1000,
        "thresh_conf":0.88,
        "thresh_intersect":0.4,

        "use_learning_schedule": "detector"
    },
    "arch": "OverSegBoxDetector", 
    "model": {
        "color":false,
        "number_of_box_types": 3,
        "number_of_pixel_types": 0,
        "norm_type": "group_norm",
        "dropout": true,
        "down_layers_cfg": [["k5-32", "M", 
                                64, 64,  "M", 
                                128, "d2-128", 128, 128,  "M", 
                                128, "d2-128", 128, 128, 
                                "M",256,"d2-256",256,"d4-256", 256],
                                ["M",256,"d2-256", 256]],
        "up_layers_cfg":[]
    }
}
