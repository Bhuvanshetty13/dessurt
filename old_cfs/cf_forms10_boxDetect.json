{
    "name": "Forms10_boxDetect",
    "cuda": true,
    "gpu": 0,
    "override": true,
    "data_loader": {
        "data_set_name": "FormsBoxDetect",
        "data_dir": "/home/ubuntu/brian/data/forms",
        "batch_size": 6,
        "shuffle": true,
        "num_workers": 5,
        "crop_to_page":false,
        "crop_params": {
            "crop_size":512
        },
        "rescale_range": [0.2,0.33],
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "only_types": {
            "boxes":true
        }


    },
    "validation": {
        "shuffle": false,
        "crop_to_page":false,
        "rescale_range": [0.27,0.27],
        "only_types": {
            "boxes":true
        }
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.000001,
        "weight_decay": 0
    },
    "loss": {
        "box":"box_alignment_loss"
    },
    "loss_params": {
        "box": {
            "ignore_thresh": 9.0,
            "use_point_loss": false
        }
    },
    "loss_weights":{"box":1.0},
    "metrics": [],
    "trainer": {
        "class": "BoxDetectTrainer",
        "iterations": 1000000,
        "save_dir": "saved/",
        "val_step": 2000,
        "save_step": 4000,
        "log_step": 100,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none"
    },
    "arch": "YoloBoxDetector", 
    "model": {
        "color":false,
        "number_of_box_types": 2,
        "number_of_point_types": 0,
        "number_of_pixel_types": 0,
        "norm_type": "weight_norm",
        "down_layers_cfg": [3,64, "M", 128, "M", 256, 256, "M", 512, 512, "M", 1024, 1024, 1024],
        "up_layers_cfg":[],
        "anchors_file": "test_anchors.json"
    }
}
