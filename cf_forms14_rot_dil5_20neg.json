{
    "name": "Forms14_rot_dil5_20neg",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "FormsBoxDetect",
        "data_dir": "../data/forms",
        "batch_size": 2,
        "shuffle": true,
        "num_workers": 2,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.65],
        "crop_params": {
            "crop_size":1024
        },
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "only_types": {
            "boxes":true
        },
        "rotation": true


    },
    "validation": {
        "shuffle": false,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.52,0.52],
        "only_types": {
            "boxes":true
        },
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "batch_size": 1,
        "rotation": true
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.01,
        "weight_decay": 0
    },
    "loss": {
        "box":"YoloDistLoss"
    },
    "loss_params": {
        "box": {
            "ignore_thresh": 0.5,
            "bad_conf_weight": 20.0
        }
    },
    "loss_weights":{"box":1.0},
    "metrics": [],
    "trainer": {
        "class": "BoxDetectTrainer",
        "iterations": 200000,
        "save_dir": "saved/",
        "val_step": 5000,
        "save_step": 20000,
        "save_step_minor":1000,
        "log_step": 1000,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "warmup_steps": 3000,
        "thresh_conf":0.88,
        "thresh_intersect":0.4
    },
    "arch": "YoloBoxDetector", 
    "model": {
        "color":false,
        "number_of_box_types": 2,
        "number_of_point_types": 0,
        "number_of_pixel_types": 0,
        "norm_type": "group_norm",
        "dilation": 5,
        "down_layers_cfg": [1,64, "M", "W128", 128, "M", "W256", 256, "M", "W512", 512, "M", "W1024", 1024, 1024],
        "up_layers_cfg":[],
        "anchors_file": "anchors_rot_26.json",
        "rotation":true
    }
}
