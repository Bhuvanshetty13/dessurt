{
    "name": "pair_test",
    "cuda": true,
    "gpu": 1,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "FormsBoxPair",
        "data_dir": "../data/testF",
        "batch_size": 1,
        "shuffle": true,
        "num_workers": 1,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.4],
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "rotation": false,
	"use_doughnut_mask": true,
	"use_vdist_mask": true,
	"use_hdist_mask": true


    },
    "validation": {
        "batch_size": 1,
        "shuffle": false,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.4],
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
	"cache_resized_images": true,
        "rotation": false,
	"use_doughnut_mask": true,
	"use_vdist_mask": true,
	"use_hdist_mask": true
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.1,
        "weight_decay": 0
    },
    "loss": "YoloLoss",
    "loss_params":
        {
            "ignore_thresh": 0.5,
	    "use_special_loss": false,
            "bad_conf_weight": 10.0
        },
    "metrics": [],
    "trainer": {
        "class": "BoxPairTrainer",
        "iterations": 200000,
        "save_dir": "saved/",
        "val_step": 5000,
        "save_step": 5000,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "warmup_steps": 500
    },
    "arch": "PairingBoxFull", 
    "model": {
        "detector_checkpoint": "saved/forms11_iouVGG_dil3/checkpoint-iteration170020.pth.tar",
        "pairer_config": {
	    "num_dist_masks": 3,
            "norm_type": "group_norm",
            "up_sample_ch": 128,
            "down1_layers_cfg": ["k9-32", "M"],
            "down2_layers_cfg": ["d6-128", 128, "M","d5-256", 256, "M", "d4-512", 512, "M", "d3-1024"],
            "final_layers_cfg": [1024, 1024]
        }
    }
}
